<script defer src="/public/js/formValidation.js"></script>

<form class="grid-form box-shadow-dark" method="POST" onsubmit="return validForm()" action="/users/register"
    encType="application/x-www-form-urlencoded">
    <header class="grid-3cols background-blackshadows">
        <h1>New User Registration</h1>
    </header>
    <label class="grid-label background-blackshadows" for="username">Username:</label>
    <input class="grid-input" id="username" type="text" placeholder="Username" type="text"
        onfocus="updateUserValidation()" onblur="closeUserValidation()" name="username" required />
    <div id="usernameValidationBox"></div>
    <label class="grid-label background-blackshadows" for="email">Email:</label>
    <input class="grid-input" id="email" type="email" placeholder="Email" onfocus="updateEmailValidation()"
        onblur="closeEmailValidation()" name="email" required />
    <div id="emailValidationBox"></div>
    <label class="grid-label background-blackshadows" for="passwd">Password:</label>
    <input class="grid-input" id="passwd" type="password" placeholder="Password"
        onfocus="updatePasswdValidation()" onblur="closePasswdValidation()" name="password" required />
    <div id="passwdValidationBox"></div>
    <label class="grid-label background-blackshadows" for="confirmpasswd">Confirm Password: </label>
    <input class="grid-input" id="cpasswd" type="password" placeholder="Confirm Password"
        onfocus="updateCPasswdValidation()" onblur="closeCPasswdValidation()" name="cpassword" required />
    <div id="cpasswdValidationBox"></div>
    <div class="grid-3cols">
        <input type="checkbox" required />
        <label>I am 13 years of age or older.</label>
    </div>
    <div class="grid-3cols">
        <input type="checkbox" required />
        <label>I have have read and agree to the <a href="">Terms of Service</a> and <a href="">Privacy
                Rules</a> .</label>
    </div>
    <button id="submitbutton" type="submit">Submit</button>
    <button id="cancelbutton" type="reset">Cancel</button>
</form>